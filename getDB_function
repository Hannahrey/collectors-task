
<?php

$servername = "db";

$username = "root";

$password = "password";

$dbname = "Cocktails";

function getDb($servername, $dbname, $username, $password) : PDO {

    $db = new PDO("mysql:host=$servername; dbname=$dbname", $username, $password);
    $db->setAttribute(PDO::ATTR_DEFAULT_FETCH_MODE, PDO::FETCH_ASSOC);
    return $db;
};

